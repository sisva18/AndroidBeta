<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".TestFragmentsActivity"
    android:layout_gravity="center">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:background="@drawable/lines"
    android:layout_gravity="center"
    android:padding="5dp">


    <TextView
        android:id="@+id/txt_title1"
        android:layout_width="370dp"
        android:layout_height="53dp"
        android:layout_gravity="center"
        android:text="Barbell Row"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/txt_feedBack"
        android:layout_width="207dp"
        android:layout_height="84dp"
        android:textSize="20dp"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/txt_Squat"
        android:layout_width="142dp"
        android:layout_height="84dp"
        android:text="Lift"
        android:textSize="20dp"
        android:layout_margin="10dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="6dp">

    <Button
        android:id="@+id/buttonSet1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="Set 1"
        android:background="@drawable/circlebutton"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"        />

    <Button
        android:id="@+id/buttonSet2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="Set 2"
        android:background="@drawable/circlebutton"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/buttonSet3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="Set 3"
        android:background="@drawable/circlebutton"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/buttonSet4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="Set 4"
        android:background="@drawable/circlebutton"
        android:layout_margin="5dp"        />

    <Button
        android:id="@+id/buttonSet5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="Set 5"
        android:background="@drawable/circlebutton"
        android:layout_margin="5dp"     />
    </LinearLayout>

</LinearLayout>


</LinearLayout>



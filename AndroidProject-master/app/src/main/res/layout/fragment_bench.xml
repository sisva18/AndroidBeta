<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestFragmentsActivity"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_gravity="center"    >

    <LinearLayout

        android:layout_width="379dp"
        android:layout_height="529dp"
        android:layout_gravity="center"
        android:background="@drawable/lines"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:src="@drawable/benchpressmodel" />

        <TextView
            android:id="@+id/txt_title1"
            android:layout_width="370dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:text="Barbell Bench press"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="40dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_feedBack"
                android:layout_width="207dp"
                android:layout_height="84dp"
                android:layout_margin="10dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt_Squat"
                android:layout_width="142dp"
                android:layout_height="84dp"
                android:layout_margin="10dp"
                android:text="Lift"
                android:textSize="20dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSet1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/n1"
                android:text="" />

            <Button
                android:id="@+id/buttonSet2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/n2"
                android:text="" />

            <Button
                android:id="@+id/buttonSet3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/n3"
                android:text="" />

            <Button
                android:id="@+id/buttonSet4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/n4"
                android:text="" />

            <Button
                android:id="@+id/buttonSet5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:background="@drawable/n5"
                android:text="" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>